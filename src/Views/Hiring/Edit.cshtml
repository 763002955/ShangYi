@model ShangYi.Models.HiringModel

@{
    ViewData["Title"] = "Edit";
}

<h2>编辑</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>招聘信息</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="id" />

        <div class="form-group">
            <label asp-for="Position" class="col-md-2 control-label">职位</label>
            <div class="col-md-10">
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Salary" class="col-md-2 control-label">薪水</label>
            <div class="col-md-10">
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Details" class="col-md-2 control-label">详情</label>
            <div class="col-md-10">
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label">地理位置</label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label">联系电话</label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
        </div>
       
        
        <div class="form-group">
            <label asp-for="UID" class="col-md-2 control-label">用户ID</label>
            <div class="col-md-10">
                <input asp-for="UID" class="form-control" />
                <span asp-validation-for="UID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
