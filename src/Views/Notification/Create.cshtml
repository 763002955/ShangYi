@model ShangYi.Models.NotificationModel

@{
    ViewData["Title"] = "Create";
}

<h2>新建</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>公告</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-2 control-label">联系电话</label>
            <div class="col-md-10">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label">标题</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UID" class="col-md-2 control-label">用户ID</label>
            <div class="col-md-10">
                <input asp-for="UID" class="form-control" />
                <span asp-validation-for="UID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Uploader" class="col-md-2 control-label">上传者</label>
            <div class="col-md-10">
                <input asp-for="Uploader" class="form-control" />
                <span asp-validation-for="Uploader" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="content" class="col-md-2 control-label">内容</label>
            <div class="col-md-10">
                <input asp-for="content" class="form-control" />
                <span asp-validation-for="content" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确认" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">返回</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
